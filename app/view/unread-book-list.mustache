<section id="unread-books">

    <div class="book-list-header">
        <div class="book-list-header-listname">
            {{listName}}
        </div>
        <div class="book-list-header-details">
            <span class="nowrap">SUB: {{unreadCount}},</span>
            <span class="nowrap">Alt-SUB: {{oldSubCount}},</span>
            <span class="nowrap">Wartezeit: {{unreadTime}} Monate</span>
        </div>
    </div>


    <div class="list-group">
        {{#groups}}
            <section class="cluster">
                <h3 class="cluster-title">{{groupName}}</h3>
                <section class="cluster-content">
                    {{#books}}
                        <a href="#/book/{{id}}" class="unread-book-entry">
                            <section class="unread-book-entry-head">
                                <section class="unread-book-entry-added">Eingetragen am {{addedDate}}</section>
                                <section class="unread-book-entry-subduration">({{subDuration}} Monate)</section>
                            </section>
                            <section class="unread-book-entry-title">{{title}}</section>

                        </a>

                        </a>
                    {{/books}}
                </section>
            </section>
        {{/groups}}
    </div>

</section>
